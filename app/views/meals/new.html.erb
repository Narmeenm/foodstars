<div class="container">
	<div class="row">
		<div class="col-xs-offset-3 col-xs-6">
			<%= simple_form_for [@meal] do |f| %>
			  <%= f.input :name, label: "Meal name"  %>
			  <%= f.input :location  %>
			  <%= f.input :type_of_food  %>
			  <%= f.input :date  %>
			  <%= f.input :price  %>
			  <%= f.input :capacity, label: "Seats avaliable"  %>
			  <%= f.input :photo  %>
			  <%= f.input :photo_cache, as: :hidden  %>
			  <%= f.submit %>
			<% end %>
			
		</div>
	</div>
</div>

