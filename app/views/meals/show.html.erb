<div class = "grid">
  <div class ="meal-photo" style="background-image: url(<%= image_path @meal.photo %>);">
  </div>
    <div class="details">
        <h4><%=@meal.type_of_food%></h4>
        <p><i class="fas fa-map-marker-alt"></i> <%=@meal.location%></p>
        <p><i class="fas fa-user-alt"></i> <%=@meal.capacity%></p>
        <p><i class="fas fa-clock"></i> <%=@meal.date.strftime("%A, %d %b %Y %l:%M %p")%></p>
        <p><i class="fas fa-dollar-sign"></i> <%=@meal.price%></p>
      </div>

      <div class="title">
        <h2><%= @meal.name %> </h2>
      </div>
        <div class="book">
          <% if (current_user && @meal.host != current_user) || !user_signed_in? %>
            <%= link_to "Book your meal!",  meal_bookings_path(@meal.id), method: :post, class: "btn btn-success"  %>
          <% end %>
        </div>
          <div
            id="map"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
</div>
